// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id String @id
  theme String
  description String
  name String
  slug String
  primaryColor PrimaryColor
  creationDate DateTime

  @@map("blogs")
}

enum PrimaryColor {
    PURPLE
    ORANGE
    BLUE
    GREEN
    YELLOW
}